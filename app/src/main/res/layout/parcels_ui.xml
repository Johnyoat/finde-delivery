<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:elevation="8dp"
    android:orientation="vertical"
    app:elevation="8dp"
    android:clickable="true"
    android:focusable="true"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="280dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendParcle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:drawableEnd="@drawable/ic_double_right"
        android:text="@string/send_a_parcel"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:drawablePadding="16dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="0.1"
            android:background="@color/litGray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="0.1"
            android:background="@color/litGray" />

    </LinearLayout>
    <!--        <androidx.recyclerview.widget.RecyclerView-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="220dp"-->
    <!--            android:id="@+id/recentList"-->
    <!--            tools:listitem="@layout/parcel_item"/>-->
    <include
        layout="@layout/parcel_item"
        android:id="@+id/parcel" />

</LinearLayout>