<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_menu"
        android:tint="@color/black"
        app:borderWidth="0dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/popWindow"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_my_location"
        android:tint="@color/black"
        app:borderWidth="0dp" />


    <LinearLayout
        android:id="@+id/popWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        app:elevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendParcle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/blue"
            android:drawableEnd="@drawable/ic_double_right"
            android:text="Send a Parcel"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:drawablePadding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textColor="@color/white"
            android:textSize="18sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="0.1"
                android:background="@color/litGray"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="0.1"
                android:background="@color/litGray"/>

        </LinearLayout>
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="220dp"-->
<!--            android:id="@+id/recentList"-->
<!--            tools:listitem="@layout/parcel_item"/>-->
        <include layout="@layout/parcel_item"/>

    </LinearLayout>


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="6.692015"
        mapbox:mapbox_cameraTargetLng="-1.622962"
        mapbox:mapbox_cameraTilt="50.25"
        mapbox:mapbox_cameraZoomMin="6"
        mapbox:mapbox_cameraZoom="14"
        mapbox:mapbox_uiRotateGestures="false"/>

</RelativeLayout>